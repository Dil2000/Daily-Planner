<h1> Day Planner </h1>

<h2>Weather</h2>
<ul>
  {{#each wea}}
  <li>
    <p> {{this.location.name}}</p>
    <p> Current Temperature {{this.current.temperature}} C</p>
    <p> Feels Like {{this.current.feelslike}} C</p>
    <p> Humidity {{this.current.humidity}}</p>
    <p> forecast 
        {{#each wea.forecast}}
          <p> {{wea.forecast.day}}  {{wea.forecast.low}}</p>
        {{/each}}
    </p>
  </li>
  {{/each}}
</ul>

<h2> Plans</h2>
<ul>
  {{#each plans}}
	<li>
	  <p> {{this.id}}.{{this.plan}}
		<form method="POST" action="/{{this.id}}?_method=DELETE" >
		  <button type ="submit">Delete Plan</button>
		</form>	
	  </p>
	</li>
  {{/each}}
</ul>

<h2> Create a plan </h2>
<form method="POST" action="/" class="button-size">
  <textarea type="text" name="plan"></textarea>
  <button type="submit">Save Plan</button>
</form>

<h2> Update a plan </h2>
<form method="POST" action="/?_method=PUT" class="button-size">
  <select name="id">
    {{#each plans}}
      <option value="{{this.id}}">
        {{this.plan}}
      </option>
    {{/each}}
  </select>
  <textarea type="text" name="plan" placeholder="plan">
  </textarea>
  <button type="submit"> Update Plan</button>
</form>
